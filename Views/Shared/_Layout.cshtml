<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Music App">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <title>@ViewBag.Title</title>
</head>
<body>
    <!--Navbar Section-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--808 Page logo-->
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/logo.png" class="nav-logo" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float: right !important;">
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    <li>@Html.ActionLink("Charts", "Charts", "Home")</li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <!--Rendering the body of the page-->
    <div class="container body-content" style="width:100% !important;">
        @RenderBody()
    </div>

 
<!--Content and scripts section for bootstrap-->
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/bootstrap/bootstrap-theme.css.map" />
<link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap/bootstrap-theme.min.css.map" />
<link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap/bootstrap.css.map" />
<link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap/bootstrap.min.css.map" />
</body>

</html>
